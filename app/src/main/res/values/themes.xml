<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHeartHealth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e4837c</item>
        <item name="colorPrimaryVariant">#db747c</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#dc848c</item>
        <item name="colorSecondaryVariant">#d4646c</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/ArrowStyle</item>
    </style>

    <style name="Theme.IHeartHealth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IHeartHealth.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IHeartHealth.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AppTheme.RadioButtonLikeBottomNavigationView" parent="@android:style/Widget.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">54dip</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#e4837c</item>
    </style>

</resources>